// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String         @id @default(uuid())
  password   String
  isDarkMode Boolean        @default(false)
  exercises  UserExercise[]
}

model Exercise {
  id               String             @id @default(uuid())
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  name             String             @db.VarChar(255)
  description      String
  video            String
  image            String
  RoutineExercises RoutineExercises[]
  UserExercise     UserExercise[]

  @@map(name: "Exercises")
}

model Routine {
  id               String             @id @default(uuid())
  name             String             @db.VarChar(255)
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  RoutineExercises RoutineExercises[]

  @@map(name: "Routines")
}

model UserCalorie {
  id       String @id @default(uuid())
  user     String
  calories Float
}

model UserWeight {
  id     String @id @default(uuid())
  user   String
  weight Float
}

model UserExercise {
  id         String   @id @default(uuid())
  userId     String
  exerciseId String
  sets       Int
  reps       Int
  weight     Float
  createdAt  DateTime @default(now())

  user     User     @relation(fields: [userId], references: [id])
  exercise Exercise @relation(fields: [exerciseId], references: [id])

  @@index([userId], name: "UserIndex")
  @@index([exerciseId], name: "ExerciseIndex")
}

model RoutineExercises {
  routine_id  String
  exercise_id String
  sets        Int
  reps        Int

  routine  Routine  @relation(fields: [routine_id], references: [id])
  exercise Exercise @relation(fields: [exercise_id], references: [id])

  @@id([routine_id, exercise_id])
  @@index([routine_id], name: "RoutineIDIndex")
  @@index([exercise_id], name: "ExerciseIDIndex")
  @@map(name: "RoutineExercises")
}

model Day {
  id   String @id @default(uuid())
  name String
}
