generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Exercise {
  id               String             @id @default(uuid())
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  name             String             @db.VarChar(255)
  description      String
  video            String
  image            String
  RoutineExercises RoutineExercises[]

  @@map(name: "Exercises")
}

model Routine {
  id               String             @id @default(uuid())
  name             String             @db.VarChar(255)
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  RoutineExercises RoutineExercises[]

  @@map(name: "Routines")
}

model RoutineExercises {
  routine_id  String
  exercise_id String
  sets        Int
  reps        Int

  routine  Routine  @relation(fields: [routine_id], references: [id])
  exercise Exercise @relation(fields: [exercise_id], references: [id])

  @@id([routine_id, exercise_id])
  @@index([routine_id], name: "RoutineIDIndex")
  @@index([exercise_id], name: "ExerciseIDIndex")
  @@map(name: "RoutineExercises")
}
